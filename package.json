{
  "name": "i18n-ai-diff",
  "version": "1.0.1",
  "description": "Diff-powered i18n CLI: only translates changed keys. Source snapshots + cache = minimal API cost. Watch mode, skip patterns, any LLM.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "i18n-ai-diff": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/cli.ts",
    "watch": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "i18n",
    "translation",
    "localization",
    "incremental",
    "diff",
    "cli",
    "llm",
    "ai",
    "openai",
    "gpt",
    "chatgpt",
    "json",
    "watch",
    "cache",
    "typescript",
    "internationalization",
    "ai-translation",
    "translate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JunTong-Wu/i18n-ai-diff.git"
  },
  "homepage": "https://github.com/JunTong-Wu/i18n-ai-diff",
  "bugs": {
    "url": "https://github.com/JunTong-Wu/i18n-ai-diff/issues"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chokidar": "^3.6.0",
    "cosmiconfig": "^9.0.0",
    "openai": "^4.28.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "cli-progress": "^3.12.0",
    "minimatch": "^9.0.3",
    "p-limit": "^5.0.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/cli-progress": "^3.11.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}
